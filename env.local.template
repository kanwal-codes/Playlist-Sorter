# Copy this file to .env.local and fill in your values
# cp env.local.template .env.local

# Spotify OAuth Configuration
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
# Spotify requires 127.0.0.1 (not localhost) for local development
SPOTIFY_REDIRECT_URI=http://127.0.0.1:3000/api/auth/callback

# Database Configuration
# For local PostgreSQL: postgresql://user:password@localhost:5432/playlist_sorter
# For Supabase: postgresql://user:password@host:5432/dbname
# For Neon: postgresql://user:password@host/dbname
DATABASE_URL=postgresql://user:password@localhost:5432/playlist_sorter

# OpenAI API (optional, for AI recommendations)
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Encryption Key (for token encryption)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=generate_a_random_32_character_hex_string_here

# NextAuth (optional, for session management)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Vercel Deployment (set in Vercel dashboard, not in .env.local)
# NEXT_PUBLIC_APP_URL=https://your-app.vercel.app (set in Vercel dashboard)
# VERCEL_URL is automatically set by Vercel
# CRON_SECRET=your_random_secret_here (set in Vercel dashboard for cron job security)

